<UserControl
    x:Class="Automation.App.Views.Menus.SideMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Automation.App.Views.Menus"
    xmlns:components="clr-namespace:Automation.App.Components"
    xmlns:viewModels="clr-namespace:Automation.App.ViewModels"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModels:SideMenuViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox Visibility="Collapsed" />
        <components:ScopedElementSelector
            Grid.Row="1"
            RootScope="{Binding RootScope}"
            Selected="{Binding SelectedElement, Mode=OneWayToSource}" />
    </Grid>
</UserControl>
