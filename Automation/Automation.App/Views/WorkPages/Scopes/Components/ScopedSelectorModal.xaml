<UserControl
    x:Class="Automation.App.Views.WorkPages.Scopes.Components.ScopedSelectorModal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Automation.App.Views.WorkPages.Scopes.Components"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:Name="ContainerElement">
    <Grid DataContext="{Binding ElementName=ContainerElement}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <local:ScopedSelector SelectedChanged="Selector_SelectedChanged" x:Name="Selector" />

        <Button
            Command="{Binding SelectCommand}"
            Margin="0,2,0,0"
            Grid.Row="1"
            HorizontalAlignment="Right"
            Padding="20,4">
            Select
        </Button>

    </Grid>
</UserControl>
