<UserControl
    x:Class="Automation.App.Views.WorkPages.Components.SchemaEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fonts="clr-namespace:Joufflu.Shared.Resources.Fonts;assembly=Joufflu.Shared"
    xmlns:local="clr-namespace:Automation.App.Views.WorkPages.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="CotnainerName"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid DataContext="{Binding ElementName=CotnainerName}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock FontWeight="Bold" Text="Input" />
        <TextBox
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            VerticalContentAlignment="Top"
            Grid.Row="1"
            AcceptsReturn="True"
            AcceptsTab="True"
            FontFamily="Courier New"
            IsReadOnly="True"
            Text="{Binding Task.InputSchemaJson}"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="2"
            Margin="0,4,0,0"
            FontWeight="Bold"
            Text="Output" />
        <TextBox
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            VerticalContentAlignment="Top"
            Grid.Row="3"
            AcceptsReturn="True"
            AcceptsTab="True"
            FontFamily="Courier New"
            IsReadOnly="True"
            Text="{Binding Task.OutputSchemaJson}"
            TextWrapping="Wrap" />
    </Grid>
</UserControl>
