<UserControl
    x:Class="Automation.App.Views.WorkPages.Components.Schema.SchemaEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Automation.App.Views.WorkPages.Components.Schema"
    mc:Ignorable="d"
    x:Name="CotnainerName"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <Grid DataContext="{Binding ElementName=CotnainerName}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="Input" FontWeight="Bold" />
        <TextBox
            Grid.Row="1"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            Text="{Binding InputJson}"
            IsReadOnly="{Binding IsReadOnly}" />

        <TextBlock
            Grid.Row="2"
            Text="Output"
            FontWeight="Bold" />
        <TextBox
            Grid.Row="3"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            Text="{Binding OutputJson}"
            IsReadOnly="{Binding IsReadOnly}" />
    </Grid>
</UserControl>
