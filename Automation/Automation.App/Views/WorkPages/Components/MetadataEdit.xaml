<UserControl
    x:Class="Automation.App.Views.WorkPages.Components.MetadataEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Automation.App.Views.WorkPages.Components"
    xmlns:components="clr-namespace:Automation.App.Views.WorkPages.Components"
    xmlns:inputs="clr-namespace:Automation.App.Components.Inputs"
    xmlns:models="clr-namespace:Automation.Models.Work;assembly=Automation.App.Shared"
    xmlns:jouffluInputs="clr-namespace:Joufflu.Inputs;assembly=Joufflu.Inputs"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:fonts="clr-namespace:Joufflu.Shared.Resources.Fonts;assembly=Joufflu.Shared"
    xmlns:layouts="clr-namespace:Joufflu.Layouts;assembly=Joufflu.Layouts"
    d:DesignWidth="300"
    mc:Ignorable="d"
    x:Name="ContainerElement">
    <GroupBox Header="Metadata" DataContext="{Binding ElementName=ContainerElement}" >
        <StackPanel Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                
                <TextBlock Margin="0,4,0,2">Name</TextBlock>
                <TextBox Grid.Column="0" Grid.Row="1" Text="{Binding Metadata.Name}" />
                
                <Grid Grid.Row="0" Grid.Column="1" Margin="4,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="0,4,0,2" >Icon</TextBlock>
                    <Button
                        Click="ButtonEditColor_Click"
                        Grid.Column="1"
                        Style="{StaticResource IconButtonSmall}">
                        <fonts:Icon Text="{x:Static fonts:IconFont.Palette}" />
                    </Button>
                    <Button
                        Margin="2,0,0,0"
                        Click="ButtonEditIcon_Click"
                        Grid.Column="2"
                        Style="{StaticResource IconButtonSmall}">
                        <fonts:Icon Text="{x:Static fonts:IconFont.PencilSimple}" />
                    </Button>
                </Grid>
                <components:ScopedIcon Grid.Column="1" Grid.Row="1" Metadata="{Binding Metadata}" FontSize="18" />
            </Grid>

            <TextBlock Margin="0,4,0,2" >Tags</TextBlock>
            <jouffluInputs:ComboBoxTags
                AllowAdd="True"
                ItemsSource="{Binding Tags}"
                SelectedItems="{Binding Metadata.Tags, Mode=TwoWay}" />

        </StackPanel>
    </GroupBox>
</UserControl>
