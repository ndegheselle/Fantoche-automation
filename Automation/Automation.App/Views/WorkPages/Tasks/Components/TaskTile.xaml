<UserControl
    x:Class="Automation.App.Views.WorkPages.Tasks.Components.TaskTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:components="clr-namespace:Automation.App.Views.WorkPages.Components"
    xmlns:local="clr-namespace:Automation.App.Views.WorkPages.Tasks.Components"
    mc:Ignorable="d"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    x:Name="ContainerElement">
    <Border
        DataContext="{Binding ElementName=ContainerElement}"
        Width="72"
        Margin="1"
        Padding="6,4"
        BorderBrush="{DynamicResource {x:Static adonisUi:Brushes.Layer1HighlightBorderBrush}}"
        Background="{DynamicResource {x:Static adonisUi:Brushes.Layer2BackgroundBrush}}"
        BorderThickness="1"
        CornerRadius="2">
        <StackPanel>
            <components:ScopedIcon Metadata="{Binding Task.Metadata}" />
            <TextBlock
                Margin="4,0,0,0"
                Text="{Binding Task.Metadata.Name}"
                HorizontalAlignment="Center" />
        </StackPanel>
    </Border>
</UserControl>
