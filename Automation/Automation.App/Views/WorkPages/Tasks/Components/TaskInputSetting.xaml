<UserControl x:Class="Automation.App.Views.WorkPages.Tasks.Components.TaskInputSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Automation.App.Views.WorkPages.Tasks.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="ContainerElement">
    <Grid DataContext="{Binding ElementName=ContainerElement}">

        <TextBox
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            VerticalContentAlignment="Top"
            Grid.Row="3"
            AcceptsReturn="True"
            AcceptsTab="True"
            FontFamily="Courier New"
            IsReadOnly="True"
            Text="{Binding Task.OutputSchemaJson, Mode=TwoWay}"
            TextWrapping="Wrap" />
    </Grid>
</UserControl>
