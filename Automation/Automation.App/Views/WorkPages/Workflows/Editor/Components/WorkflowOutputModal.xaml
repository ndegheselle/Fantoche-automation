<UserControl
    x:Class="Automation.App.Views.WorkPages.Workflows.Editor.Components.WorkflowOutputModal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    MinHeight="500"
    MinWidth="600"
    xmlns:fonts="clr-namespace:Joufflu.Shared.Resources.Fonts;assembly=Joufflu.Shared"
    xmlns:local="clr-namespace:Automation.App.Views.WorkPages.Workflows.Editor.Components"
    x:Name="ContainerElement">
    <UserControl.Resources>
        <Style
            x:Key="CodeTextBox"
            TargetType="TextBox"
            BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="VerticalContentAlignment" Value="Top" />
            <Setter Property="AcceptsReturn" Value="True" />
            <Setter Property="AcceptsTab" Value="True" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </UserControl.Resources>
    <Grid DataContext="{Binding ElementName=ContainerElement}" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        
        <local:ContextMapping x:Name="ContextMappingElement"
                              Inputs="{Binding ContextSamples}"
                              SchemaJson="{Binding Workflow.OutputSchemaJson, Mode=TwoWay}"
                              SettingsJson="{Binding Workflow.OutputMappingJson, Mode=TwoWay}" />
        
        <CheckBox Grid.Row="1" IsChecked="{Binding EndTask.Settings.WaitAll, Mode=TwoWay}" Checked="HandleWaitAllChanged" Unchecked="HandleWaitAllChanged">Wait for all inputs</CheckBox>

        <StackPanel
            Orientation="Horizontal"
            Grid.Row="1"
            HorizontalAlignment="Right"
            Margin="0,2,0,0">
            <Button Margin="2,0" Command="{Binding CancelCommand}">
                <StackPanel Orientation="Horizontal">
                    <fonts:Icon Text="{x:Static fonts:IconFont.X}" />
                    <TextBlock Margin="4,0,0,0">Cancel</TextBlock>
                </StackPanel>
            </Button>
            <Button Command="{Binding ValidateCommand}">
                <StackPanel Orientation="Horizontal">
                    <fonts:Icon Text="{x:Static fonts:IconFont.FloppyDisk}" />
                    <TextBlock Margin="4,0,0,0">Save</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>