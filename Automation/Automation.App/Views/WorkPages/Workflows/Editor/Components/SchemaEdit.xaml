<UserControl x:Class="Automation.App.Views.WorkPages.Workflows.Editor.Components.SchemaEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="ContainerElement"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style
            x:Key="CodeTextBox"
            TargetType="TextBox"
            BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="VerticalContentAlignment" Value="Top" />
            <Setter Property="AcceptsReturn" Value="True" />
            <Setter Property="AcceptsTab" Value="True" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </UserControl.Resources>
    <TabControl TabStripPlacement="Bottom" x:Name="TabControl" DataContext="{Binding ElementName=ContainerElement}">
        <TabItem Header="Schema">
            <TextBox IsReadOnly="{Binding IsReadOnly}" Style="{StaticResource CodeTextBox}" Text="{Binding SchemaJson}" />
        </TabItem>
        <TabItem Header="Schema sample">
            <Grid>
                <TextBox Text="{Binding SampleJson}" IsReadOnly="{Binding IsReadOnly}" Style="{StaticResource CodeTextBox}" />
                <Button Click="ConvertSampleToSchema" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,2,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsReadOnly}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    Convert to schema
                </Button>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>