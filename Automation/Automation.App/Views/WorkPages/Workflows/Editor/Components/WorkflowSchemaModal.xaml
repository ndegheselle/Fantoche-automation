<UserControl
    x:Class="Automation.App.Views.WorkPages.Workflows.Editor.Components.WorkflowSchemaModal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    MinHeight="300"
    MinWidth="300"
    xmlns:fonts="clr-namespace:Joufflu.Shared.Resources.Fonts;assembly=Joufflu.Shared"
    x:Name="ContainerElement">
    <Grid DataContext="{Binding ElementName=ContainerElement}" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBox
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            VerticalContentAlignment="Top"
            AcceptsReturn="True"
            AcceptsTab="True"
            FontFamily="Courier New"
            Text="{Binding WorkflowSchemaSample, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap"
            TextChanged="TextBox_TextChanged" />

        <StackPanel
            Orientation="Horizontal"
            Grid.Row="1"
            HorizontalAlignment="Right"
            Margin="0,2,0,0">
            <Button Margin="2,0" Command="{Binding CancelCommand}">
                <StackPanel Orientation="Horizontal">
                    <fonts:Icon Text="{x:Static fonts:IconFont.X}" />
                    <TextBlock Margin="4,0,0,0">Cancel</TextBlock>
                </StackPanel>
            </Button>
            <Button Command="{Binding ValidateCommand}">
                <StackPanel Orientation="Horizontal">
                    <fonts:Icon Text="{x:Static fonts:IconFont.FloppyDisk}" />
                    <TextBlock Margin="4,0,0,0">Save</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
