<UserControl
    x:Class="Automation.App.Views.TasksPages.ScopeUI.ScopePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    xmlns:components="clr-namespace:Automation.App.Views.TasksPages.Components"
    xmlns:fonts="clr-namespace:Joufflu.Shared.Resources.Fonts;assembly=Joufflu.Shared"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:viewModels="clr-namespace:Automation.Shared.ViewModels;assembly=Automation.Shared"
    d:DataContext="{d:DesignInstance viewModels:Scope}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Margin="4"
                Text="{Binding Name}"
                FontWeight="Bold"
                FontSize="14" />

            <StackPanel
                Grid.Column="1"
                Orientation="Horizontal"
                Margin="2">
                <Button Click="ButtonAdd_Click" Padding="10,8">
                    <Button.ContextMenu>
                        <ContextMenu Placement="Bottom">
                            <MenuItem Header="Add scope" Click="MenuAddScope_Click">
                                <MenuItem.Icon>
                                    <components:NodeIcon Type="Scope" Margin="0,0,4,0" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Add workflow" Click="MenuAddWorkflow_Click">
                                <MenuItem.Icon>
                                    <components:NodeIcon Type="Workflow" Margin="0,0,4,0" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Add task" Click="MenuAddTask_Click">
                                <MenuItem.Icon>
                                    <components:NodeIcon Type="Task" Margin="0,0,4,0" />
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </Button.ContextMenu>
                    <fonts:Icon Text="{x:Static fonts:IconFont.Plus}" />
                </Button>
                <Button
                    Click="ButtonParam_Click"
                    Margin="2,0,0,0"
                    Padding="8">
                    <fonts:Icon Text="{x:Static fonts:IconFont.Gear}" />
                </Button>
            </StackPanel>
        </Grid>
        <ListBox
            Grid.Row="1"
            ItemsSource="{Binding SortedChildrens}"
            MouseDoubleClick="ListBox_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <components:NodeIcon Type="{Binding Type}" Margin="0,0,4,0" />
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
