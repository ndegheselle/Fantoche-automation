<UserControl
    x:Class="Automation.App.Views.TasksPages.TasksMainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:components="clr-namespace:Automation.App.Views.TasksPages.Components"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <components:ScopedSelector
            x:Name="SideMenu"
            Grid.Column="0"
            SelectedChanged="ScopedSelector_SelectedChanged" />
        <ContentPresenter Grid.Column="1" x:Name="NavigationContent" />
    </Grid>
</UserControl>
