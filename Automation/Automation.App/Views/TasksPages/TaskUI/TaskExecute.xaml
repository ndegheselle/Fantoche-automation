<UserControl
    x:Class="Automation.App.Views.TasksPages.TaskUI.TaskExecute"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Automation.App.Views.TasksPages.TaskUI"
    MinHeight="400"
    MinWidth="400">
    <Grid Margin="2,0" DataContext="{Binding RelativeSource={RelativeSource AncestorType=local:TaskExecute}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Margin="0,8,0,4" FontWeight="Bold">Settings JSON</TextBlock>
        <TextBox
            Text="{Binding JsonSettings, Mode=TwoWay}"
            Grid.Row="1"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            VerticalContentAlignment="Top" />
    </Grid>
</UserControl>
