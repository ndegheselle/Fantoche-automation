<UserControl
    x:Class="Automation.App.Views.TasksPages.TaskUI.TaskSchedules"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Automation.App.Views.TasksPages.TaskUI"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="100" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <GroupBox Header="Schedules">
            <TextBlock>All scheduled execution</TextBlock>
        </GroupBox>

        <GroupBox
            Grid.Row="1"
            Header="Timeline"
            Margin="0,4,0,0">
            <TextBlock>Graph to display the execution of the task with oxyplot</TextBlock>
        </GroupBox>

        <GroupBox
            Header="Servers"
            Grid.Row="2"
            Margin="0,4,0,0">
            <TextBlock>List and priority of the servers to execute on</TextBlock>
        </GroupBox>
    </Grid>
</UserControl>
