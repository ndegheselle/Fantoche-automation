<UserControl
    x:Class="Automation.App.Views.TasksPages.TaskUI.TaskEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Automation.App.Views.TasksPages.TaskUI"
    xmlns:components="clr-namespace:Automation.App.Views.TasksPages.Components"
    xmlns:inputs="clr-namespace:Automation.App.Components.Inputs"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <Grid DataContext="{Binding Task, RelativeSource={RelativeSource AncestorType=local:TaskEdit}}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <GroupBox Header="Scoped parameters">
            <components:ScopedParameters Scoped="{Binding ParentScope}" />
        </GroupBox>
        <GroupBox Grid.Row="1" Margin="0,4,0,0" Header="Task">
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="0,0,0,4">Source DLL</TextBlock>
                <inputs:FilePicker />
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
