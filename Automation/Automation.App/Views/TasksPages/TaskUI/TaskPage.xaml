<UserControl
    x:Class="Automation.App.Views.TasksPages.TaskUI.TaskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Automation.App.Views.TasksPages.TaskUI"
    xmlns:components="clr-namespace:Automation.App.Views.TasksPages.Components"
    xmlns:fonts="clr-namespace:Joufflu.Shared.Resources.Fonts;assembly=Joufflu.Shared"
    mc:Ignorable="d"
    xmlns:viewmodels="clr-namespace:Automation.App.ViewModels.Tasks"
    d:DataContext="{d:DesignInstance viewmodels:TaskScopedItem}">
    <TabControl>
        <TabItem Header="Scheduler">
            <local:TaskSchedules />
        </TabItem>
        <TabItem Header="History">
            <components:ScopedHistory Scoped="{Binding}" />
        </TabItem>
        <TabItem Header="Parameters">
            <local:TaskEdit Task="{Binding}" />
        </TabItem>
    </TabControl>
</UserControl>
