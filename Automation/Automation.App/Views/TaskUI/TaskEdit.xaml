<UserControl
    x:Class="Automation.App.Views.TaskUI.TaskEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Automation.App.Views.TaskUI"
    mc:Ignorable="d"
    MinHeight="300"
    MinWidth="300"
    xmlns:scopes="clr-namespace:Automation.Base;assembly=Automation.Base"
    xmlns:components="clr-namespace:Automation.App.Components"
    d:DataContext="{d:DesignInstance scopes:Node}">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <TextBlock Margin="0,4">Name</TextBlock>
            <TextBox Text="{Binding Name}" />

            <TextBlock Margin="0,4">DLL path</TextBlock>
            <components:FilePicker
                MaxWidth="400"
                Margin="0,4"
                Filter="Dynamic Link Library (*.dll)|*.dll" />

            <TextBlock Margin="0,4">Context</TextBlock>
        </StackPanel>

        <TextBox
            Grid.Row="1"
            VerticalContentAlignment="Top"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            VerticalScrollBarVisibility="Visible" />
    </Grid>
</UserControl>
