<UserControl
    x:Class="Automation.App.Views.ScopeUI.ScopePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    xmlns:components="clr-namespace:Automation.App.Components"
    xmlns:scopes="clr-namespace:Automation.Base;assembly=Automation.Base"
    d:DataContext="{d:DesignInstance scopes:Scope}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Margin="4"
                Text="{Binding Name}"
                FontWeight="Bold"
                FontSize="14" />

            <Button Grid.Column="1" Click="ButtonAdd_Click">
                <Button.ContextMenu>
                    <ContextMenu Placement="Bottom">
                        <MenuItem Header="Add scope" Click="MenuAddScope_Click">
                            <MenuItem.Icon>
                                <components:NodeIcon Type="Scope" Margin="0,0,4,0" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Add workflow" Click="MenuAddWorkflow_Click">
                            <MenuItem.Icon>
                                <components:NodeIcon Type="Workflow" Margin="0,0,4,0" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Add task" Click="MenuAddTask_Click">
                            <MenuItem.Icon>
                                <components:NodeIcon Type="Task" Margin="0,0,4,0" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </Button.ContextMenu>
                <TextBlock Text="&#x2b;" FontFamily="{StaticResource FontAwesomeSolid}" />
            </Button>
        </Grid>
        <ListBox
            Grid.Row="1"
            ItemsSource="{Binding Childrens}"
            MouseDoubleClick="ListBox_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <components:NodeIcon Type="{Binding Type}" Margin="0,0,4,0" />
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
