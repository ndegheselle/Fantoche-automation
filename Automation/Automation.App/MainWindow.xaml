<adonisControls:AdonisWindow
    x:Class="Automation.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:components="clr-namespace:Automation.App.Base.Components"
    xmlns:local="clr-namespace:Automation.App"
    Title="Automation - test"
    Width="800"
    Height="450">

    <Grid Margin="2" DataContext="{Binding TaskContext, RelativeSource={RelativeSource AncestorType=local:MainWindow}}">

        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <GroupBox Header="Class selection">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Margin="0,0,4,0"
                            VerticalAlignment="Center"
                            Text="Plugins folder" />
                        <components:FolderPicker Grid.Column="1" SelectedFolderPath="{Binding DllFolderPath}"/>
                    </Grid>
                    <ListBox Grid.Row="1" Margin="0,2,0,0" ItemsSource="{Binding AvailableClasses}" />
                </Grid>
            </GroupBox>

            <GridSplitter
                Grid.Column="1"
                Width="2"
                Margin="2,0"
                Background="{DynamicResource {x:Static adonisUi:Brushes.Layer1BackgroundBrush}}" />

            <GroupBox
                Grid.Column="2"
                Header="Actions">
                <GroupBox.Style>
                    <Style TargetType="GroupBox" BasedOn="{StaticResource {x:Type GroupBox}}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedClass}" Value="{x:Null}">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </GroupBox.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Margin="0,4">Json context</TextBlock>
                    <TextBox Grid.Row="1" />
                    <Button
                        Grid.Row="2"
                        Margin="0,2,0,0"
                        HorizontalAlignment="Right">
                        <StackPanel Orientation="Horizontal">

                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource FontAwesomeSolid}"
                                Text="&#xf04b;" />
                            <TextBlock Margin="4,0,0,0">Start</TextBlock>
                        </StackPanel>
                    </Button>
                </Grid>
            </GroupBox>
        </Grid>

        <GridSplitter
            Grid.Row="1"
            Height="2"
            Margin="0,2"
            Background="{DynamicResource {x:Static adonisUi:Brushes.Layer1BackgroundBrush}}" />

        <GroupBox Grid.Row="2" Header="Output">
            <ScrollViewer Padding="0">
                <TextBox IsReadOnly="True">
                    
                </TextBox>
            </ScrollViewer>
        </GroupBox>
    </Grid>

</adonisControls:AdonisWindow>