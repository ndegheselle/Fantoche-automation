<UserControl
    x:Class="Automation.App.Components.Inputs.SelectColorModal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Automation.App.Components.Inputs"
    xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:fonts="clr-namespace:Joufflu.Shared.Resources.Fonts;assembly=Joufflu.Shared"
    mc:Ignorable="d"
    MinWidth="200"
    MinHeight="200"
    x:Name="ContainerElement">
    <Grid DataContext="{Binding ElementName=ContainerElement}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ListBox
            Margin="2"
            ItemsSource="{Binding Colors}"
            SelectedItem="{Binding Selected}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid
                        Columns="4"
                        IsItemsHost="True"
                        HorizontalAlignment="Center" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Border
                            Width="16"
                            Height="16"
                            Background="{Binding}"
                            CornerRadius="2" />
                        <TextBlock Text="{Binding}" FontSize="10" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Border
            Grid.Row="1"
            Padding="2"
            Background="{DynamicResource {x:Static adonisUi:Brushes.Layer1BackgroundBrush}}">
            <Button
                Padding="20,4"
                HorizontalAlignment="Right"
                adonisExtensions:LayerExtension.Layer="2"
                Command="{Binding SelectCommand}">
                Select
            </Button>
        </Border>
    </Grid>
</UserControl>
