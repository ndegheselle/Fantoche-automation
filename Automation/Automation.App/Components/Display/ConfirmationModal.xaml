<UserControl
    x:Class="Automation.App.Components.Display.ConfirmationModal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Automation.App.Components.Display"
    mc:Ignorable="d"
    MinWidth="200">
    <TextBlock
        Margin="10"
        TextWrapping="Wrap"
        Text="{Binding Message, RelativeSource={RelativeSource AncestorType={x:Type local:ConfirmationModal}}}" />
</UserControl>
